<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nf.demo.dao.EmployeeDao">
    <select id="getAll" resultType="com.nf.demo.entity.EmployeeEntity">
        select id, username, salary, hiredate
        from employee
        order by id
    </select>

    <insert id="insert" >

        insert into employee(username,salary,hiredate)
        values(#{username},#{salary},#{hiredate})
    </insert>

    <delete id="deleteByDeptId">
        delete from employee where deptid = #{deptid}
    </delete>
</mapper>